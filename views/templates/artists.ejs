<%- include('../partials/header', {page: 'All the Awesome Artists'}) %>
    <body>
      <a href="/albums">Albums</a>
      <div class="artist_search">
        <h2>Enter Artists</h2>
        <form action="/" method="POST">
          <div class="form-group">
            <label for="name">Name:</label>
            <input name="name" type="text" placeholder="Katy Perry">
          </div>
          <div class="form-group">
            <label for="genre">Genre:</label>
            <input name="genre" type="text" placeholder="Pop">
          </div>
          <div class="form-group">
            <label for="bio">Bio:</label>
            <textarea name="bio" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-info">Submit</button>
         </form>
       </div>

      <div class="artist_table">
        <h3> Artists </h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Genre</th>
            </tr>
          </thead>
          <tbody>
              <% artists.forEach(function(artist) { %>
                <tr>
                  <td><a href="/artist/<%= artist._id %>"><%= artist.name %></a></td>
                  <td><a href="/artist/<%= artist._id %>"><%= artist.genre %></a></td>
                </tr>
              <% }); %>
          </tbody>
        </table>
      </div>

    </body>
</html>
